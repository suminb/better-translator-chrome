{
  "manifest_version": 2,

  "name": "Better Translator",
  "description": "A Google Chrome extension for Better Translator",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/"
  ],
  "content_scripts": [{
    "matches": ["<all_urls>"],
    "js": ["jquery.js", "jquery.cookie.js", "jquery.autoresize.js",
           "bootstrap.js", "sprintf.js", "main.js"]
  }],
  "sandbox": {
    "pages": ["popup.html"]
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'"
}
